<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Cinema" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/almostwhite</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/almostblack</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/almostblack</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:navigationIcon">@color/almostwhite</item>

    </style>
</resources>