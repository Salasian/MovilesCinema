<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.cines.CinesFragment"
    android:orientation="vertical"
    android:background="#312927">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cines">

        </TextView>
    </RelativeLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="1"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ubicacion_36x36" />

        <Button
            android:id="@+id/btn_ubicacion"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_column="0"
            android:text="Cine Obregón"
            android:layout_marginLeft="30dp"
            android:background="@drawable/roundedbutton"
            android:backgroundTint="@color/editTextGray"
            android:textColor="@color/almostwhite"/>

        <ImageButton
            android:id="@+id/buscar"
            android:layout_width="38dp"
            android:layout_height="35dp"
            android:layout_marginLeft="29dp"
            android:background="@color/Banner"
            android:src="@drawable/busqueda_36x36"
            />

        <ImageButton
            android:id="@+id/imagen"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:background="@color/Banner"
            android:src="@drawable/filtros_36x36"
            />
    </GridLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="45dp"
                        android:layout_marginVertical="15dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="#1459AB"/>
                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:rowCount="4"
                            android:columnCount="2">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cinépolis Bella Vista"
                                android:textColor="@color/white"
                                android:layout_column="0"
                                android:layout_row="0"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dirección"
                                android:textColor="@color/white"
                                android:layout_column="0"
                                android:layout_row="1"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tipo de Sala"
                                android:textColor="@color/white"
                                android:layout_column="0"
                                android:layout_row="2"/>
                            <ImageButton
                                android:layout_width="150dp"
                                android:layout_height="match_parent"
                                android:layout_row="3"
                                android:layout_column="0"
                                android:layout_marginHorizontal="6dp"
                                />
                            <ImageButton
                                android:layout_width="150dp"
                                android:layout_height="match_parent"
                                android:layout_row="3"
                                android:layout_column="1"
                                android:layout_marginHorizontal="6dp"
                                />
                        </GridLayout>
                    </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="45dp"
                    android:layout_marginVertical="15dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="#1459AB"/>
                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:rowCount="4"
                        android:columnCount="2">
                        <TextView
                            android:layout_width="wrap_content"
