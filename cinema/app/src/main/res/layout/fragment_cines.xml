<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.cines.CinesFragment"
    android:orientation="vertical"
    android:background="#312927">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="240dp"
            android:layout_height="90dp"
            android:background="#320302"
            app:layout_constraintBottom_toBottomOf="@id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginLeft="30dp"/>
    </RelativeLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_cineEscogido"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_column="0"
            android:text="Cine Obregón"
            android:layout_marginLeft="30dp"/>

        <Button
            android:id="@+id/btn_filter"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_column="1"
            android:layout_gravity="right"
            android:layout_marginHorizontal="7dp"
            android:text="Search"
            android:textSize="6sp"/>

        <Button
            android:id="@+id/btn_search"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_column="2"
            android:text="Filter"
            android:textSize="6sp"/>
    </GridLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="45dp"
                        android:layout_marginVertical="15dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="#1459AB"/>
                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:rowCount="4"
                            android:columnCount="2">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cinépolis Bella Vista"
                                android:textColor="@color/white"
                                android:layout_column="0"
                                android:layout_row="0"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dirección"
                                android:textColor="@color/white"
                                android:layout_column="0"
                                android:layout_row="1"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tipo de Sala"
                                android:textColor="@color/white"
                                android:layout_column="0"
                                android:layout_row="2"/>
                            <ImageButton
                                android:layout_width="150dp"
                                android:layout_height="match_parent"
                                android:layout_row="3"
                                android:layout_column="0"
                                android:layout_marginHorizontal="6dp"
                                />
                            <ImageButton
                                android:layout_width="150dp"
                                android:layout_height="match_parent"
                                android:layout_row="3"
                                android:layout_column="1"
                                android:layout_marginHorizontal="6dp"
                                />
                        </GridLayout>
                    </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="45dp"
                    android:layout_marginVertical="15dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="#1459AB"/>
                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:rowCount="4"
                        android:columnCount="2">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cinépolis Bella Vista"
                            android:textColor="@color/white"
                            android:layout_column="0"
                            android:layout_row="0"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dirección"
                            android:textColor="@color/white"
                            android:layout_column="0"
                            android:layout_row="1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tipo de Sala"
                            android:textColor="@color/white"
                            android:layout_column="0"
                            android:layout_row="2"/>
                        <ImageButton
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:layout_row="3"
                            android:layout_column="0"
                            android:layout_marginHorizontal="6dp"
                            />
                        <ImageButton
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:layout_row="3"
                            android:layout_column="1"
                            android:layout_marginHorizontal="6dp"
                            />
                    </GridLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="45dp"
                    android:layout_marginVertical="15dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="#1459AB"/>
                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:rowCount="4"
                        android:columnCount="2">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cinépolis Bella Vista"
                            android:textColor="@color/white"
                            android:layout_column="0"
                            android:layout_row="0"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dirección"
                            android:textColor="@color/white"
                            android:layout_column="0"
                            android:layout_row="1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tipo de Sala"
                            android:textColor="@color/white"
                            android:layout_column="0"
                            android:layout_row="2"/>
                        <ImageButton
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:layout_row="3"
                            android:layout_column="0"
                            android:layout_marginHorizontal="6dp"
                            />
                        <ImageButton
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:layout_row="3"
                            android:layout_column="1"
                            android:layout_marginHorizontal="6dp"
                            />
                    </GridLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="45dp"
                    android:layout_marginVertical="15dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="#1459AB"/>
                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:rowCount="4"
                        android:columnCount="2">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cinépolis Bella Vista"
                            android:textColor="@color/white"
                            android:layout_column="0"
                            android:layout_row="0"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dirección"
                            android:textColor="@color/white"
                            android:layout_column="0"
                            android:layout_row="1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tipo de Sala"
                            android:textColor="@color/white"
                            android:layout_column="0"
                            android:layout_row="2"/>
                        <ImageButton
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:layout_row="3"
                            android:layout_column="0"
                            android:layout_marginHorizontal="6dp"
                            />
                        <ImageButton
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:layout_row="3"
                            android:layout_column="1"
                            android:layout_marginHorizontal="6dp"
                            />
                    </GridLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="45dp"
                    android:layout_marginVertical="15dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="#1459AB"/>
                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:rowCount="4"
                        android:columnCount="2">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cinépolis Bella Vista"
                            android:textColor="@color/white"
                            android:layout_column="0"
                            android:layout_row="0"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dirección"
                            android:textColor="@color/white"
                            android:layout_column="0"
                            android:layout_row="1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tipo de Sala"
                            android:textColor="@color/white"
                            android:layout_column="0"
                            android:layout_row="2"/>
                        <ImageButton
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:layout_row="3"
                            android:layout_column="0"
                            android:layout_marginHorizontal="6dp"
                            />
                        <ImageButton
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:layout_row="3"
                            android:layout_column="1"
                            android:layout_marginHorizontal="6dp"
                            />
                    </GridLayout>
                </LinearLayout>

            </LinearLayout>
    </ScrollView>

</LinearLayout>