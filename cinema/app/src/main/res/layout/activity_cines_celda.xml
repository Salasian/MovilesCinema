<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.cines.CinesCelda"
    android:background="@color/Banner">

    <LinearLayout
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/squaregraybox">

        <LinearLayout
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="45dp"
            android:layout_marginVertical="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cinema"
                android:layout_width="100dp"
                android:layout_height="100dp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:columnCount="2"
                android:rowCount="4">

                <TextView
                    android:id="@+id/nombreCine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/direccionCine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/salasCine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/white" />

                <RatingBar
                    android:id="@+id/ratingbarCine"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="3dp"
                    android:isIndicator="true"
                    android:max="5"
                    android:numStars="5"
                    android:progressTint="@color/yellow"
                    android:rating="4.5"
                    android:transformPivotX="0dp"
                    android:transformPivotY="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:layout_gravity="center"
                    android:layout_marginTop="13dp"
                    android:padding="4dp"
                    android:textColor="@color/white"
                    android:textSize="11dp"
                    android:textStyle="bold" />

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="-10dp"
                    android:adjustViewBounds="true"
                    android:background="@color/Banner"
                    android:maxWidth="22dp"
                    android:maxHeight="22dp"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/menu_36x36"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:layout_gravity="center"
                    android:layout_marginTop="13dp"
                    android:padding="4dp"
                    android:text="MenÃº"
                    android:textColor="@color/white"
                    android:textSize="8sp"
                    android:textStyle="bold" />

            </GridLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>