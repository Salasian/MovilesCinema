<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Fondo"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".ui.cartelera.Datos">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/Banner"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-black"
            android:text="Película"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold" />
    </LinearLayout>

    <GridView
        android:id="@+id/gridView"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:numColumns="3"
        android:columnWidth="100dp"
        android:horizontalSpacing="10dp"
        android:verticalSpacing="10dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginTop="1dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginHorizontal="197dp"
        android:background="@color/Fondo"
        android:layout_marginTop="29dp"
        android:scaleType="centerInside"
        android:src="@drawable/agregar_a_lista_36x36" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="centerInside"
        android:layout_marginHorizontal="232dp"
        android:background="@color/Fondo"
        android:layout_marginTop="-31dp"
        android:src="@drawable/por_ver_off_36x36" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginHorizontal="268dp"
        android:scaleType="centerInside"
        android:background="@color/Fondo"
        android:layout_marginTop="-31dp"
        android:src="@drawable/vista_off_36x36" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="centerInside"
        android:layout_marginHorizontal="302dp"
        android:background="@color/Fondo"
        android:layout_marginTop="-30dp"
        android:src="@drawable/favorita_off_36x36" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="centerInside"
        android:layout_marginLeft="5dp"
        android:background="@color/Fondo"
        android:layout_marginTop="-31dp"
        android:layout_marginHorizontal="336dp"
        android:src="@drawable/compartir_36x36"
        />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="240dp"
        android:id="@+id/imagen"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:scaleType="fitXY"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-230dp"
        android:layout_marginLeft="190dp"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        android:id="@+id/titulo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="190dp"
        android:background="@color/white"
        android:fontFamily="sans-serif-black"
        android:padding="4dp"
        android:textColor="@color/Banner"
        android:id="@+id/clasificacion"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="-30dp"
        android:layout_marginLeft="216dp"
        android:background="@color/white"
        android:fontFamily="sans-serif-black"
        android:padding="4dp"
        android:textColor="@color/Banner"
        android:id="@+id/duracion"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="-30dp"
        android:layout_marginLeft="258dp"
        android:background="@color/white"
        android:fontFamily="sans-serif-black"
        android:padding="4dp"
        android:textColor="@color/Banner"
        android:id="@+id/categoria"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="20dp"
        android:text="Director"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-black"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="-21dp"
        android:text="Reparto"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-black"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="188dp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-light"
        android:textSize="13sp"
        android:id="@+id/director"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-25dp"
        android:layout_marginLeft="299dp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-light"
        android:textSize="13sp"
        android:id="@+id/reparto"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:layout_marginTop="-4dp"
        android:layout_marginLeft="299dp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-light"
        android:id="@+id/reparto1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-4dp"
        android:layout_marginLeft="299dp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-light"
        android:textSize="13sp"
        android:id="@+id/reparto2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-2dp"
        android:layout_marginLeft="299dp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-light"
        android:textSize="13sp"
        android:id="@+id/reparto3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="64dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="Calificación Media de los Usuarios."
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <RatingBar
        android:id="@+id/ratingbar"
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-10dp"
        android:numStars="5"
        android:progressTint="@color/yellow"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:stepSize="0.5" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="474dp"
        android:orientation="vertical"
        android:layout_marginTop="0dp">

        <TextView
            android:layout_width="95dp"
            android:layout_height="50dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="60dp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="Sinopsis"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Sinopsis"
            android:layout_width="378dp"
            android:layout_height="120dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-light"
            android:textSize="12sp" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="Trailer"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>
    </ScrollView>
</LinearLayout>