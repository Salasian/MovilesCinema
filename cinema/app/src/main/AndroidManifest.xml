<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.SplashCinema"
        tools:targetApi="31">
        <activity
            android:name=".ui.ubicacion.UbicacionExactaActivity"
            android:exported="false"
            android:theme="@style/Theme.Cinema"/>
        <activity
            android:name=".ui.ubicacion.UbicacionActivity"
            android:exported="false"
            android:theme="@style/Theme.Cinema"/>
        <activity
            android:name=".ui.RegistrarseActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat" />
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.SplashCinema" />
        <activity
            android:name=".ui.InicioSesionActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.cartelera.Datos"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".ui.cartelera.Horarios"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".ui.cartelera.ratingCelda"
            android:theme="@style/Theme.AppCompat.NoActionBar" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>